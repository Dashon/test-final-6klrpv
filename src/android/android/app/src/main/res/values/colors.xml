<?xml version="1.0" encoding="utf-8"?>
<!--
  Color resources for the AI-Enhanced Social Travel Platform Android app
  Implements design system colors with support for light/dark themes
  All colors are WCAG 2.1 Level AA compliant for accessibility
  
  Light theme colors use Material Design baseline opacity values:
  - Primary text: 87% black (#DE000000)
  - Secondary text: 60% black (#99000000)
  - Disabled text: 38% black (#61000000)
  
  Dark theme colors use Material Design dark theme opacity values:
  - Primary text: 100% white (#FFFFFF)
  - Secondary text: 70% white (#B3FFFFFF) 
  - Disabled text: 50% white (#80FFFFFF)
-->
<resources>
    <!-- Primary brand colors -->
    <color name="primary">#1A73E8</color>
    <color name="primary_dark">#1557B0</color>
    <color name="primary_variant">#D2E3FC</color>

    <!-- Secondary/accent colors -->
    <color name="secondary">#34A853</color>
    <color name="secondary_variant">#E6F4EA</color>

    <!-- Background colors -->
    <color name="background">#FFFFFF</color>
    <color name="background_dark">#121212</color>

    <!-- Surface colors for elevated components -->
    <color name="surface">#FFFFFF</color>
    <color name="surface_dark">#1E1E1E</color>

    <!-- Error/destructive action colors -->
    <color name="error">#B00020</color>
    <color name="error_dark">#CF6679</color>

    <!-- Text colors with appropriate contrast ratios -->
    <color name="text_primary">#DE000000</color>
    <color name="text_primary_dark">#FFFFFF</color>
    <color name="text_secondary">#99000000</color>
    <color name="text_secondary_dark">#B3FFFFFF</color>

    <!-- Touch feedback/ripple effect colors -->
    <color name="ripple">#1F000000</color>
    <color name="ripple_dark">#33FFFFFF</color>
</resources>